<p id="notice"><%= notice %></p>
<div class="container">
  <div class="d-flex flex-column position-absolute bottom-0 start-0">
    <%= content_tag :h2, @article.title, class: 'article-title' %>
    <%= render partial: "votes" %>

    <% if @article.image.attached? %>
      <%= image_tag url_for(@article.image), width:'300px' %>
    <% end %>

    <div class="d-flex flex-column">
      <%= content_tag :p, @article.body, class: 'article-text' %>
    </div>

    <%= edit_if_owner(@article) %>
    <%= link_to 'Back', articles_path %>
  </div>
</div>
