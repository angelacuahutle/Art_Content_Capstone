<p id="notice" class="m-0 p-0"><%= notice %></p>
<div class="row categories-container m-0 p-0">
  <% @limited_articles_by_category.each_with_index do |art,i| %>
    <div class="col-3 m-0 p-0">
      <%= top_img(art,i) %>
      <div class="half">
        <div class="d-flex flex-column">
          <div class="d-flex m-2 p-2 flex-column">
            <%= content_tag :p, @category.name %>
            <div class="text-decoration-non">
             <h2><%= link_to art.title, article_path(art), class:'most-recent' %></h2>
            </div>  
            <%= read_more(art) %>
            <%= edit_if_owner(art) %>
          </div>
        </div>
      </div>
      <%= bottom_img(art,i) %>
    </div>
  <% end %>
</div>
