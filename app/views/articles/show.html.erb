<p id="notice"><%= notice %></p>
<div class="container">
  <div class="d-flex flex-column">
    <%= content_tag :h2, @article.title, class: 'article-title' %>
    <%= content_tag :h4, 'by ' + @article.author.name, class: 'article-title' %>
    <%= render partial: "votes" %>

    <% image_attached?(@article) %>

    <div class="d-flex flex-column">
      <%= content_tag :p, @article.body, class: 'article-text' %>
    </div>

    <%= edit_if_owner(@article) %>
    <%= link_to 'Back', articles_path %>
  </div>
</div>
